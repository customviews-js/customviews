{
  "name": "@customviews-js/customviews",
  "version": "1.6.0",
  "description": "A JavaScript dynamic custom views Library.",
  "type": "module",
  "types": "dist/types/browser.d.ts",
  "main": "dist/custom-views.min.js",
  "module": "dist/custom-views.min.js",
  "browser": "dist/custom-views.min.js",
  "unpkg": "dist/custom-views.min.js",
  "jsdelivr": "dist/custom-views.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/customviews-js/customviews.git"
  },
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "import": "./dist/custom-views.min.js",
      "require": "./dist/custom-views.min.js",
      "browser": "./dist/custom-views.min.js"
    },
    "./core": {
      "import": "./dist/custom-views.min.js",
      "require": "./dist/custom-views.min.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:types": "tsc --project tsconfig.json",
    "build:js": "rollup -c",
    "build": "npm run clean && npm run build:types && npm run build:js",
    "release": "npm run release:beta",
    "release:beta": "npm run build && npm publish --tag beta",
    "release:prod": "npm run build && npm publish --tag latest",
    "bump:beta": "npm version prerelease --preid=beta",
    "bump:patch": "npm version patch",
    "bump:minor": "npm version minor",
    "bump:major": "npm version major",
    "deploydocs:stable": "cd docs && markbind deploy -s stable-site.json",
    "deploydocs": "cd docs && markbind deploy -s site.json",
    "dev": "rollup -c -w",
    "watch": "rollup -c -w",
    "test": "vitest run"
  },
  "keywords": [
    "javascript",
    "library",
    "custom views"
  ],
  "author": "Chan Ger Teck",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@tsconfig/svelte": "^5.0.6",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.3.1",
    "jsdom": "^27.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.46.2",
    "rollup-plugin-svelte": "^7.2.3",
    "svelte": "^5.46.1",
    "svelte-preprocess": "^6.0.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "bugs": {
    "url": "https://github.com/customviews-js/customviews/issues"
  },
  "homepage": "https://github.com/customviews-js/customviews#readme"
}
